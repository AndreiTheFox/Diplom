<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.LikeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/color_like_tint</item>
        <item name="android:minHeight">@dimen/icon_size</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="Widget.AppTheme.AnyButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/color_any_button_tint</item>
        <item name="android:minHeight">@dimen/icon_size</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>

    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/grayBackground</item>
        <item name="colorPrimaryDark">?colorControlNormal</item>
        <item name="colorAccent">@color/lightBlue</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>

    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_account_circle_24</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">@string/login</item>
    </style>



</resources>